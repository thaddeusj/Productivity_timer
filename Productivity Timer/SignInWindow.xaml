<Window x:Class="Productivity_Timer.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignInWindow" Height="125" Width="284">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="UserNameBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254"/>
        <Button x:Name="SignInButton" Content="Sign In" HorizontalAlignment="Left" Height="24" Margin="145,61,0,0" VerticalAlignment="Top" Width="57" Click="SignInButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Height="24" Margin="207,61,0,0" VerticalAlignment="Top" Width="57" Click="CancelButton_Click"/>
        <Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Left" Height="24" Margin="10,61,0,0" VerticalAlignment="Top" Width="62" Click="RegisterButton_Click"/>

    </Grid>
</Window>
